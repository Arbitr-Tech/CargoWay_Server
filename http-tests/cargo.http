### Метод для создания груза
POST {{baseUrl}}/
Authorization: {{authToken}}
Content-Type: application/json

{
  "name": "Box",
  "description": "Большая коробка",
  "weight": 10,
  "volume": 50,
  "bodyType": "Тент",
  "dimensions": {
    "length": 10,
    "width": 5,
    "height": 20
  },
  "route": {
    "from": "New York",
    "to": "Los Angeles"
  },
  "price": 99.99,
  "typePay": "НДС",
  "readyDate": "2025-02-09",
